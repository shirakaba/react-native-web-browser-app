{
  "compilerOptions": {
    // 1
    "target": "es2015",
    "module": "es2015",
    "jsx": "react",
    "outDir": "build",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": true
  },
  "exclude": [
    // 2
    "index.android.js",
    "index.ios.js",
    "build",
    "node_modules",
    "__tests__"
  ],
  "compileOnSave": true // 3
}
